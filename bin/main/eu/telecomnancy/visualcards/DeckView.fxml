<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="600.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="eu.telecomnancy.visualcards.DeckViewController">
    <VBox prefHeight="200.0" prefWidth="600.0">
        <MenuBar>
            <Menu text="File">
                <MenuItem text="New"/>
                <MenuItem mnemonicParsing="false" onAction="#refresh" text="Refresh"/>
                <SeparatorMenuItem/>
                <MenuItem text="Exit"/>
            </Menu>
            <Menu text="CardDeck">
                <MenuItem onAction="#shuffle" text="Shuffle"/>
                <MenuItem text="Sort"/>
            </Menu>
            <Menu text="Draw">
                <MenuItem text="Draw a Random Card"/>
                <MenuItem text="Draw next Card"/>
                <SeparatorMenuItem/>
                <MenuItem text="About"/>
            </Menu>
        </MenuBar>
        <ToolBar prefHeight="40.0" prefWidth="200.0">
            <Button mnemonicParsing="false" text="Draw a Card"/>
            <Button fx:id="nextCardButton" mnemonicParsing="false" onAction="#nextCardButtonPushed" text="Next Card"
                    textAlignment="CENTER"/>
            <Button mnemonicParsing="false" text="Shuffle"/>
        </ToolBar>
        <VBox prefHeight="175.0" prefWidth="154.0">
            <HBox alignment="TOP_CENTER" prefHeight="223.0" prefWidth="600.0">
                <ImageView fx:id="deckImageView" fitHeight="150.0" fitWidth="100.0" pickOnBounds="true"
                           preserveRatio="true"/>
                <ImageView fx:id="activeCardImageView" fitHeight="150.0" fitWidth="100.0" pickOnBounds="true"
                           preserveRatio="true"/>
                <VBox.margin>
                    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                </VBox.margin>
                <padding>
                    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                </padding>
            </HBox>

            <GridPane fx:id="cardPane">

            </GridPane>
        </VBox>
    </VBox>
</AnchorPane>
